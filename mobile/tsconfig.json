{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "experimentalDecorators": true, // allow @nozbe/watermelondb/decorators
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
